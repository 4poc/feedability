{
  "server": {
    "bind": "127.0.0.1",
    "port": 1912,
    "banner": "Feedability/0",
    "location": "http://127.0.0.1:1912/",
    "entity_encode": true,
    "preserve_order": true
  },
  "urlopen": {
    "cache": true,
    "headers": {
      "User-Agent": "Mozilla/5.0 (compatible; Feedability/0.0; +https://github.com/4poc/feedability)",
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8",
      "Accept-Language": "en-us,en;q=0.5",
      "Accept-Charset": "ISO-8859-1,utf-8;q=0.7,*;q=0.7",
      "Pragma": "no-cache"
    },
    "convert_charset": true,
    "use_content_charset": true
  },
  "filter": {
    "activate": true,
    "jquery_url": "http://code.jquery.com/jquery-1.4.2.min.js",
    "rules": {
      ".*": {
        "post": {
          "replace": {
            "(src|href)=('|\")?(\/)": "$1=$2%{URL_BASE}$3",
            "<script[^>]*>([\\s\\S]*?)</script>": " ",
            "onclick=\"[^\"]+\"": ""
          }
        }
      },
      "heise.de": {
        "pre": {
          "remove": ["#mitte_rechts"]
        }
      },
      "carta.info": {
        "pre": {
          "remove": ["#commentblock"]
        }
      },
      "giessener-allgemeine.de": {
        "prepend": [".fettvorspann"]
      }
    }
  },
  "cache": {
    "path": "./cache"
  },
  "log": {
    "console": true,
    "stderr": false,
    "file": true,
    "file_seperate": false,
    "syncronized": false,
    "path": "./logs",
    "console_level": 3,
    "file_level": 4
  }
}
